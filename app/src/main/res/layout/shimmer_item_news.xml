<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/right_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/shimmer_header_news"
        android:layout_marginVertical="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@id/left_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/left_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        layout="@layout/shimmer_header_news"
        app:layout_constraintTop_toTopOf="@id/right_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/right_item" />
</androidx.constraintlayout.widget.ConstraintLayout>